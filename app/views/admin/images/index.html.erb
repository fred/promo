<%= stylesheet_link_tag "table.css" %>

<h2>Listing images <%= link_to 'New Image', new_admin_image_path %></h2>

<table cellspacing="0">
  <tr>
    <th></th>
    <th><%= sort_link @search, :id %></th>
    <th><%= sort_link @search, :title %></th>
    <th><%= sort_link @search, :featured, "Home Page" %></th>
    <th><%= sort_link @search, :gallery, "Gallery" %></th>
    <th><%= sort_link @search, :published, "Visible" %></th>
    <th><%= sort_link @search, :updated_at, "Updated" %></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= link_to(image_tag(image.data(:small)),admin_image_path(image)) %></td>
    <td><%= image.id %></td>
    <td><%= link_to(image.title,admin_image_path(image))%></td>
    <td><%= image.featured %></td>
    <td><%= image.gallery %></td>
    <td><%= image.published %></td>
    <td><%= image.updated_at.to_s(:short) %></td>
    <td><%= link_to 'Edit', edit_admin_image_path(image) %></td>
    <td><%= link_to 'Destroy', admin_image_path(image), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @images %>
  </div>
  <%= will_paginate @images, :container => false %>
</div>

<p>
  Show
  <%= link_to "10", :per_page => 10 %>
  <%= link_to "20", :per_page => 20 %>
  <%= link_to "50", :per_page => 50 %>
  <%= link_to "100", :per_page => 100 %>
</p>

<h3><%= link_to 'New Image', new_admin_image_path %></h3>
