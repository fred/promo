<%= stylesheet_link_tag "table.css" %>

<h1>Listing images</h1>

<table cellspacing="0">
  <tr>
    <th>Mini</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= link_to(image_tag(image.data(:thumb)),admin_image_path(image)) %></td>
    <td><%= link_to(image.title,admin_image_path(image))%></td>
    <td><%= link_to 'Show', admin_image_path(image) %></td>
    <td><%= link_to 'Edit', edit_admin_image_path(image) %></td>
    <td><%= link_to 'Destroy', admin_image_path(image), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

