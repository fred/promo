
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h3>
      <%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:
      </h3>

      <ul>
      <% @image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <fieldset>
    <legend>Image</legend>  
    <p>
      <%= f.label :title, "Image Title" %>
      <%= f.text_field :title, :size => 80 %>
    </p>
    <p>
      <%= f.label :data, "Browse File" %>
      <%= f.file_field :data %>
    </p>
    <p>
      <%= f.check_box :gallery %>
      <%= f.label :gallery, "Show in Image Gallery" %>
    </p>
    <p>
      <%= f.check_box :featured %>
      <%= f.label :featured, "Show in Home Page" %>
    </p>
    <p>
      <%= f.check_box :published %>
      <%= f.label :published, "Visible to Public" %>
    </p>    
    <p>
      <%= f.submit %>
    </p>
  </fieldset>
