<% @title ||= "Users" %>

<table id="hor-minimalist-b">
  <caption><%= @title %></caption>
	<thead>
    <tr>
      <th>Name</th>
      <th>Admin</th>
      <th>Created</th>
      <th>Updated</th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>

<% for user in @users %>
  <tr>
    <td class="mouse" onclick=<%="document.location.href='#{admin_user_path(user)}'"%>>
      <%= link_to(user.name, admin_user_path(user)) %>
    </td>
    <td>
      <%= user.admin? %>
    </td>
    <td class="mouse" onclick=<%="document.location.href='#{admin_user_path(user)}'"%>>
      <%=h user.created_at.to_s(:short) %>
    </td>
    <td class="mouse" onclick=<%="document.location.href='#{admin_user_path(user)}'"%>>
      <%=h user.updated_at.to_s(:short) %>
    </td>
    <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
    <td><%= link_to "Del", admin_user_path(user), :confirm => "are_you_sure", :method => :delete %></td>
  </tr>
<% end %>
</table>


<br />
<%= link_to image_tag("admin/new_button.png"), new_admin_user_path %>
